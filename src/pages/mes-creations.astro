---
import Layout from "../layouts/Layout.astro";
import creationsScript from "../scripts/auth/creations.ts?url";
---

<Layout>
	<main class="pt-28 pb-24">
		<section class="mx-auto max-w-[1100px] px-6 space-y-12">
			<header class="rounded-3xl bg-white px-8 py-10 shadow-xl">
				<div class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
					<div>
						<span class="inline-flex items-center rounded-full bg-[#f5f1e6] px-4 py-1 text-xs font-semibold uppercase tracking-wide text-[#1a1a1a] shadow-sm">
							Mes créations
						</span>
						<h1 class="mt-4 text-3xl font-semibold text-[#1a1a1a]">
							Vos lunettes sauvegardées
						</h1>
						<p class="mt-2 max-w-2xl text-sm text-[#1f2933]/80">
							Retrouvez ici toutes les montures que vous avez configurées et enregistrées. Chaque création est liée à votre compte et reste privée.
						</p>
					</div>
					<div class="rounded-2xl bg-[#f5f1e6] px-6 py-5 text-center">
						<p class="text-xs uppercase tracking-wide text-[#6b7280]">Montures enregistrées</p>
						<p class="mt-2 text-3xl font-semibold text-[#1a1a1a]" data-creations-count>0</p>
					</div>
				</div>
				<p class="mt-6 text-sm font-medium text-[#1f2933]" data-creations-status>
					Chargement…
				</p>
			</header>

			<section class="grid gap-8 lg:grid-cols-2" data-creations-list>
				<div class="rounded-2xl border border-dashed border-[#d4c5a0] bg-[#faf7f0] px-5 py-6 text-center text-sm text-[#6b7280]">
					<svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-10 w-10 text-[#d4c5a0]" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25l-1.5 1.5m0 0l1.5 1.5m-1.5-1.5h12M3 12a9 9 0 1118 0 9 9 0 01-18 0z" />
					</svg>
					<p class="mt-3 font-medium text-[#1a1a1a]">
						Connectez-vous pour afficher vos lunettes personnalisées.
					</p>
				</div>
			</section>
		</section>
	</main>
</Layout>

<script type="module" src={creationsScript}></script>

